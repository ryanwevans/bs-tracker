<div class="row">
  <h2>Records Index Page</h2>
</div>
<br>
<div class="row align-items-center">
  <% @records.each do |record| %>
      <div class="col-sm-3">
          <br>
          <strong><%= record.date.strftime('%m-%d') %></strong>
          <br>
          <strong><%= record.time.strftime('%I:%M %p') %></strong>
          <br>
          Reading:
          <%= record.reading %>
          <br>
          Dose:
          <%= record.dose %>
          <br>
          <%= link_to "Edit", edit_record_path(record) %>
      </div>
    <br>
  <% end %>
</div>